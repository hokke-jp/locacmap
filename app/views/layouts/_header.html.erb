<header id="header" class="py-2 px-5 h-14 shadow-md">

  <div class="lg:max-w-5xl mx-auto flex justify-between">

    <div class="flex">
      <%= link_to image_tag("applogo.png", alt: "applogo", width: "40px", class: "rounded-lg"), root_path %>
      <%= link_to image_tag("appname.svg", alt: "appname", width: "80px", height: "40px", class: "hidden sm:block"), root_path, {class: "ml-2 flex"} %>
    </div>

    <% if logged_in? %>

    <nav>
      <ul class="flex justify-between w-36 list-none">
        <li class="mr-4">
          <a href="/microposts/new" class="btn-blue inline-block py-2 px-5">
              <%= image_tag("post.svg", alt: "post", width: "24px", class: "inline-block align-bottom") %>
              <p class="inline-block font-semibold">投稿する</p>
          </a>
        </li>

        <li class="">
        <%= link_to avatar_for(current_user), current_user %>
        </li>
      </ul>
    </nav>

    <% else %>

    <nav>
      <ul class="flex justify-between list-none w-56 text-xs">
        <li class="w-20 text-center text-green-600 hover:text-green-900 hover:underline">
          <%= link_to "簡単ログイン", easylogin_path, {class: "block leading-10"} %>
        </li>

        <li class="w-16 text-center text-green-600 hover:text-green-900 hover:underline">
          <%= link_to "ログイン", login_path, {class: "block leading-10"} %>
        </li>
        
        <li class="w-20">
          <%= link_to "新規登録", signup_path, {class: "btn-regreen block px-2 py-2 rounded-lg font-semibold text-center"} %>
        </li>
      </ul>
    </nav>

    <% end %>

  </div>
</header>
