<header class="py-2 px-5 h-14 shadow-md mb-2">

  <div class="lg:max-w-5xl mx-auto flex justify-between">

    <div class="flex">
      <%= link_to image_tag("applogo.png", alt: "applogo", width: "40px", class: "rounded-lg"), root_path %>
      <%= link_to image_tag("appname.svg", alt: "appname", width: "80px", height: "40px", class: "hidden sm:block"), root_path, {class: "ml-2 flex"} %>
    </div>


    <% if logged_in? %>

    <nav>
      <ul class="list-none w-36 flex justify-between">
        <li class="w-32">
          <a href="/microposts/new" class="w-4/5 h-full btn flex justify-center items-center">
              <%= image_tag("post.svg", alt: "post", width: "20px", class: "inline-block") %>
              <p class="inline-block">投稿する</p>
          </a>
        </li>

        <li class="">
          <%= link_to gravatar_for(@user,size: "36"), profile_user_path(current_user), {class: ""} %>
        </li>
      </ul>
    </nav>

    <% else %>

    <nav>
      <ul class="list-none w-56 text-xs flex justify-between">
        <li class="w-20 text-center text-green-600 hover:text-green-900 hover:underline">
          <%= link_to "簡単ログイン", easylogin_path, {class: "leading-10 block"} %>
        </li>

        <li class="w-16 text-center text-green-600 hover:text-green-900 hover:underline">
          <%= link_to "ログイン", login_path, {class: "leading-10 block"} %>
        </li>
        
        <li class="w-16 btn">
          <%= link_to "新規登録", signup_path, {class: "leading-10 block"} %>
        </li>
      </ul>
    </nav>

    <% end %>

  </div>
</header>
