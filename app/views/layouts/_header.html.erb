<header class="p-2 h-14 flex justify-between">
  <%= link_to image_tag("4.png", alt: "applogo", width: "40px", class: "rounded-lg"),root_path%>
  
  <nav>
    <div class="w-56 h-2 table text-xs">
      <% if logged_in? %>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "記事投稿", '#' %></li>
        <li><%= link_to "Log out", logout_path, method: :delete %></li>
      <% else %>
        <li class="list-none w-2/5 text-center table-cell cursor-pointer text-green-600 hover:text-green-900"><%= link_to "簡単ログイン", '#', {class: "leading-10 block"} %></li>
        <li class="list-none w-3/10 text-center table-cell cursor-pointer text-green-600 hover:text-green-900"><%= link_to "ログイン", login_path, {class: "leading-10 block"} %></li>
        <li class="list-none w-3/10 text-center table-cell cursor-pointer text-white hover:text-gray-700 bg-green-400 hover:bg-green-500 rounded-md"><%= link_to "新規登録", signup_path, {class: "leading-10 block"} %></li>
      <% end %>
    </div>
  </nav>
</header>
