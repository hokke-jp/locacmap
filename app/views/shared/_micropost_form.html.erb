<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div>
    <%= f.label :address, "都道府県", class: "label" %>
    <%= f.text_field :address, class: "field" %>
  </div>
  <div>
    <%= f.label :address, "時代", class: "label" %>
    <%= f.text_field :address, class: "field" %>
  </div>
  <div>
    <%= f.label :LatLng, "緯度・経度", class: "label" %>
    <%= f.text_field :LatLng, class: "field" %>
  </div>
  <div class="">
    <%= f.label :title, "タイトル", class: "label" %>
    <%= f.text_area :title, placeholder: "30文字以内", class: "field" %>
  </div>
  <div class="">
    <%= f.label :title, "説明文", class: "label" %>
    <%= f.text_area :content, placeholder: "140文字以内", class: "field" %>
  </div>
  <%= f.submit "投稿", class: "" %>
  <span class="">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<script type="text/javascript">
  let micropost_image = document.getElementById("micropost_image")
  micropost_image.addEventListener("change", () => {
    let size_in_megabytes = micropost_image.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("5MB以下のファイルを選択してください。");
      micropost_image.value = "";
    }
  });
</script>