<% provide(:title, "ログイン") %>

<div class="w-4/5 mx-auto my-10">
  <div class="max-w-sm mx-auto">
    <h1 class="text-2xl text-center mb-5">ログイン</h1>
    <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col") do |f| %>

      <div class="mb-5">
        <%= f.label :email, "メールアドレス", class: "label" %>
        <%= f.email_field :email, class: "field" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "label" %>
        <%= f.password_field :password, class: "field" %>
      </div>

      <div class="mb-12">
        <%= f.label :remember_me, class: "label" do %>
          <%= f.check_box :remember_me %>
          <span class="text-sm">ログイン情報を保持する</span>
        <% end %>
      </div>

      <%= f.submit "ログイン", class: "h-10 mb-8 btn" %>
    <% end %>

    <p class="text-sm"><%= link_to "パスワードをお忘れの方", new_password_reset_path, {class: "text-blue-500 hover:text-gray-700 hover:underline"} %></p>
    <p class="text-sm">アカウントをお持ちでない方は<%= link_to "新規登録", signup_path,{class: "text-blue-500 hover:text-gray-700 hover:underline"} %></p>
  </div>
</div>
