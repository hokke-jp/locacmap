<% provide(:title, "ログイン") %>
<h1 class="text-2xl text-center mt-10 mb-5">ログイン</h1>

<div class="w-4/5 m-auto leading-8">
  <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col" ) do |f| %>

    <div class="mb-5">
      <%= f.label :email, "メールアドレス", class: "label" %>
      <%= f.email_field :email, class: "field" %>
    </div>

    <div class="">
      <%= f.label :password, "パスワード", class: "label" %>
      <%= f.password_field :password, class: "field" %>
    </div>

    <div>
      <%= f.label :remember_me, class: "" do %>
        <%= f.check_box :remember_me %>
        <span class="text-sm">ログイン情報を保持する</span>
      <% end %>
    </div>

    <%= f.submit "ログイン", class: "block h-10 mt-8 mb-8 rounded-md text-white hover:text-gray-700 bg-green-400 hover:bg-green-500" %>
  <% end %>

  <p class="text-sm">アカウントをお持ちでない方は<%= link_to "新規登録", signup_path,{class: "text-blue-500 hover:text-gray-700"} %></p>
</div>
