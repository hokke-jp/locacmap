<%= form_with(model: @user, local: true, url: signup_path, class: "flex flex-col" ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


  <div class="mb-5">
    <%= f.label :name, "ユーザー名（他のユーザーに公開されます）", class: "label" %>
    <%= f.text_field :name, class: "field" %>
  </div>

  <div class="mb-5">
    <%= f.label :email, "メールアドレス（非公開）", class: "label" %>
    <%= f.email_field :email, class: "field" %>
  </div>

  <div class="mb-5">
    <%= f.label :password, "パスワード", class: "label" %>
    <%= f.password_field :password, class: "field" %>
  </div>

  <div class="mb-12">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "label" %>
    <%= f.password_field :password_confirmation, class: "field" %>
  </div>

  <%= f.submit yield(:button_text), class: "btn-green w-32 h-10 mx-auto" %>
<% end %>