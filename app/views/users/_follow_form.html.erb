<div id="follow_form" class="py-10 text-center">

<% if !logged_in? %>
  <%= form_with(model: Relationship, remote: true) do |f| %>
    <div><%= hidden_field_tag :followed_id, @user.id %></div>
    <%= f.submit "ユーザーをお気に入りに登録", class: "btn-blue py-2 px-6 text-xl" %>
  <% end %>

<% elsif current_user.following?(@user) %>
  <%= render 'unfollow' %>

<% else %>
  <%= render 'follow' %>
<% end %>

</div>