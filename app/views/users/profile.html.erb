<% provide(:title, "Profile") %>

<div>
  <div class="text-center mt-5 mb-8">
    <div class="inline-block text-center">
      <%= gravatar_for(@user,size: "100") %>
    </div>
    <p class="mt-2 text-xl">
      <%= @user.name %>
    </p>
  </div>

  <div class="">
    <div class="flex flex-col text-center">
      <div class="mb-2">
        <a href="#" class="text-2xl rounded-md text-indigo-500 hover:text-indigo-800 hover:bg-indigo-200">
          <%= @user.microposts.count %>
        </a>
      </div>
      <p class="text-sm text-gray-600  bg-tw-gray">投稿数</p>
    </div>
  </div>

  <div class="w-4/5 flex flex-col text-right mx-auto my-5">
    <p class="text-sm text-gray-600 ">
      アカウント作成日：<%= l @user.created_at, format: :y_m_d %>
    </p>
    <div class="w-full border mx-auto">
    </div>
  </div>

  <div>
    <ul class="text-gray-600">
      <li>
        <a href="#">
          お気に入りの記事
        </a>
      </li>
      <li>
        <a href="#">
          登録変更
        </a>
      </li>
      <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
    </ul>
  </div>



</div>