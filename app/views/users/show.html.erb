<% provide(:title, @user.name) %>

<div>

  <div class="text-center mt-10 mb-16">
    <div class="inline-block text-center">
      <%= gravatar_for(@user,size: "100") %>
    </div>
    <p class="mt-2 text-xl"><%= @user.name %></p>
  </div>

  <div class="flex justify-around mx-auto mb-20 max-w-sm">
    <div class="flex flex-col text-center">
      <div class="w-20">
        <%= link_to @user.microposts.count, micropost_path(@user), {class: "text-2xl rounded-md text-indigo-500 hover:text-indigo-800 hover:bg-indigo-200"} %>
      </div>
      <p class="text-sm text-gray-600  bg-tw-gray">投稿数</p>
    </div>
    <div class="flex flex-col text-center">
      <div class="w-20">
        <%= link_to @user.following.count, following_user_path(@user), {class: "text-2xl rounded-md text-indigo-500 hover:text-indigo-800 hover:bg-indigo-200"} %>
      </div>
      <p class="text-sm text-gray-600  bg-tw-gray">フォロー</p>
    </div>
    <div class="flex flex-col text-center">
      <div class="w-20">
        <%= link_to @user.followers.count, followers_user_path(@user), {class: "text-2xl rounded-md text-indigo-500 hover:text-indigo-800 hover:bg-indigo-200"} %>
      </div>
      <p class="text-sm text-gray-600  bg-tw-gray">フォロワー</p>
    </div>
  </div>

  <%# micropost_path(user: params[:id]) %>

  <div class="w-4/5 flex flex-col text-right mx-auto">
    <p class="text-sm text-gray-600 ">
      アカウント作成日：<%= l @user.created_at, format: :y_m_d %>
    </p>
    <div class="w-full border mx-auto"></div>
  </div>

</div>


<% if logged_in? && current_user == @user %>
<div>
  <ul class="text-gray-600">
    <li><a href="#">いいねした記事</a></li>
    <li><%= link_to "アカウント編集", edit_user_path(current_user) %></li>
    <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
  </ul>
</div>
<% end %>
