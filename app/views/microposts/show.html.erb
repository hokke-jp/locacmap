<% provide(:title, 'All users') %>

<div class="col-md-8">
  <% if @person.microposts.any? %>
    <h3>Microposts (<%= @person.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% else %>
    <a href="/">home</a>
  <% end %>
</div>
