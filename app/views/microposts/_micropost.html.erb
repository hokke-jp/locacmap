<li id="micropost-<%= micropost.id %>" class="block">

  <% if micropost.image.attached? %>
  <div class="w-full h-60 bg-black">
    <div class="flex justify-center">
      <%= image_tag micropost.display_image %>
    </div>
  </div>
  <% end %>

  <%= link_to avatar_for(micropost.user, size: 50), micropost.user %>

  <span class=""><%= link_to micropost.user.name, micropost.user %><br></span>

  <span class=""><%= micropost.prefecture.name %><br></span>

  <span class=""><%= micropost.period.name %><br></span>

  <span class=""><%= micropost.title %><br></span>

  <span class=""><%= micropost.content %></span>

  <span class="">
    <%= time_ago_in_words(micropost.created_at) %>前の投稿
    <% if current_user == micropost.user %>
    <%= link_to "この投稿を削除", micropost, method: :delete, data: { confirm: '削除を実行します' } %>
    <% end %>
  </span>

  <div id="micropost-<%= micropost.id %>-going">
    <%= render 'microposts/going', micropost: micropost %>
  </div>
</li>
