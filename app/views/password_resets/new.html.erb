<% provide(:title, "パスワードを忘れた") %>
<h1>パスワードを忘れた</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset,
                    local: true) do |f| %>
      <%= f.label :email, "メールアドレス", class: "label" %>
      <%= f.email_field :email, class: 'field' %>

      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>