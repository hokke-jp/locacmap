<% provide(:title, 'パスワード再設定') %>

<h1 class="page-title">パスワード再設定</h1>
<div class="w-4/5 mx-auto my-10">
  <div class="max-w-sm mx-auto">

    <%= form_with(model: @user, url: edit_password_reset_path(params[:id], email: @user.email), local: true, class: "flex flex-col") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="mb-5">
        <%= f.label :password, "新しいパスワード", class: "label" %>
        <%= f.password_field :password, class: 'field' %>
      </div>

      <div class="mb-12">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "label" %>
        <%= f.password_field :password_confirmation, class: 'field' %>
      </div>

      <%= f.submit "パスワードを変更", class: "btn-green py-2 px-6 mx-auto" %>
    <% end %>
  </div>
</div>